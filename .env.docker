# =============================================================================
# Docker Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Memory Database Configuration
# -----------------------------------------------------------------------------
MEMORY_DB_USER=postgres
MEMORY_DB_PASSWORD=postgres
MEMORY_DB_HOST=memory_postgres
MEMORY_DB_PORT=5432
MEMORY_DB_NAME=memory_db

# -----------------------------------------------------------------------------
# RAG Database Configuration
# -----------------------------------------------------------------------------
RAG_DB_USER=postgres
RAG_DB_PASSWORD=postgres
RAG_DB_HOST=rag_postgres
RAG_DB_PORT=5432
RAG_DB_NAME=rag_db

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_BASE_URL=${OPENAI_BASE_URL}
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# Ollama Configuration (Alternative)
# -----------------------------------------------------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# -----------------------------------------------------------------------------
# Memory LLM & Embedding Settings
# -----------------------------------------------------------------------------
MEMORY_LLM_PROVIDER=openai
MEMORY_LLM_MODEL=gpt-4o-mini
MEMORY_EMBEDDING_PROVIDER=openai
MEMORY_EMBEDDING_MODEL=text-embedding-3-small
MEMORY_EMBEDDING_DIMS=1536

# -----------------------------------------------------------------------------
# MCP Configuration
# -----------------------------------------------------------------------------
MEMORY_MCP_HOST=0.0.0.0
MEMORY_MCP_PORT=8050
MEMORY_MCP_TRANSPORT=streamable-http

RAG_MCP_HOST=0.0.0.0
RAG_MCP_PORT=8055
RAG_MCP_TRANSPORT=streamable-http

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_ENV=development
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
SECRET_KEY=${SECRET_KEY}

# -----------------------------------------------------------------------------
# Agent Cache
# -----------------------------------------------------------------------------
AGENT_CACHE_MAX_SIZE=1000
AGENT_CACHE_TTL_SECONDS=3600

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# -----------------------------------------------------------------------------
# Redis (Optional)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Chainlit UI
# -----------------------------------------------------------------------------
CHAINLIT_AUTH_SECRET=${CHAINLIT_AUTH_SECRET}
