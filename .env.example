# =============================================================================
# AI Multi-Agent Enterprise System - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="AI Multi-Agent Enterprise System"
APP_DESCRIPTION="Agent Tiers"
APP_VERSION="0.1.0"
DEBUG=false

# -----------------------------------------------------------------------------
# Security (REQUIRED)
# -----------------------------------------------------------------------------
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
OPENAI_API_KEY=""
OPENAI_BASE_URL=""
OPENAI_MODEL="gpt-4o-mini"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# Ollama Configuration (Alternative to OpenAI)
OLLAMA_API_KEY="ollama"
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3"

# -----------------------------------------------------------------------------
# Memory Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
MEMORY_VECTOR_STORE_PROVIDER="pgvector"
MEMORY_DB_USER="postgres"
MEMORY_DB_PASSWORD="postgres"
MEMORY_DB_HOST="localhost"
MEMORY_DB_PORT=5432
MEMORY_DB_NAME="memory_db"

# Memory LLM & Embedding Settings
MEMORY_LLM_PROVIDER="openai"
MEMORY_LLM_MODEL="gpt-4o-mini"
MEMORY_EMBEDDING_PROVIDER="openai"
MEMORY_EMBEDDING_MODEL="text-embedding-3-small"
MEMORY_EMBEDDING_DIMS=1536

# -----------------------------------------------------------------------------
# RAG Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
RAG_DB_USER="postgres"
RAG_DB_PASSWORD="postgres"
RAG_DB_HOST="localhost"
RAG_DB_PORT=5433
RAG_DB_NAME="rag_db"

# RAG Database Connection Pool
RAG_DB_MIN_CONNECTION=5
RAG_DB_MAX_CONNECTION=20
RAG_DB_CONNECTION_TIMEOUT=60
RAG_DB_MAX_INACTIVE_LIFETIME=300

# -----------------------------------------------------------------------------
# MCP Memory Server Configuration
# -----------------------------------------------------------------------------
MEMORY_MCP_NAME="memory-server"
MEMORY_MCP_VERSION="1.0.0"
MEMORY_MCP_HOST="localhost"
MEMORY_MCP_PORT=8050
MEMORY_MCP_LOG="info"
MEMORY_MCP_TRANSPORT="streamable-http"  # Options: stdio, http, sse, streamable-http

# -----------------------------------------------------------------------------
# MCP RAG Server Configuration
# -----------------------------------------------------------------------------
RAG_MCP_NAME="rag-server"
RAG_MCP_VERSION="1.0.0"
RAG_MCP_HOST="localhost"
RAG_MCP_PORT=8055
RAG_MCP_LOG="info"
RAG_MCP_TRANSPORT="streamable-http"  # Options: stdio, http, sse, streamable-http

# -----------------------------------------------------------------------------
# API Server Configuration
# -----------------------------------------------------------------------------
API_ENV="development"
API_HOST="0.0.0.0"
API_PORT=8000
API_LOG_LEVEL="info"

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS="*"  # Use comma-separated list for production, e.g., "https://example.com,https://api.example.com"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="*"  # Use comma-separated list: "GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOW_HEADERS="*"  # Use comma-separated list: "Content-Type,Authorization"
CORS_EXPOSE_HEADERS=""
CORS_MAX_AGE=600

# -----------------------------------------------------------------------------
# Redis Configuration (Optional)
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379/0"
REDIS_CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Agent Cache Configuration
# -----------------------------------------------------------------------------
AGENT_CACHE_MAX_SIZE=1000
AGENT_CACHE_TTL_SECONDS=3600

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="uploads"

# -----------------------------------------------------------------------------
# Vector/Embedding Configuration
# -----------------------------------------------------------------------------
EMBEDDING_MODEL="text-embedding-3-small"
EMBEDDING_DIMENSION=1536
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # Options: json, text

# -----------------------------------------------------------------------------
# Chainlit UI Configuration
# -----------------------------------------------------------------------------
CHAINLIT_AUTH_SECRET=""  # Required for UI authentication
